<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bacGrey">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:background="@drawable/cart_view_bac">
        <ImageView
            android:id="@+id/cartListSelect"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_no_select"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="2dp"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/cartListIcon"
            android:layout_width="120dp"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp">
            <TextView
                android:id="@+id/cartListTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="大学计算机必修课新讲-编译原理"
                android:textColor="@color/colorText"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/cartListPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥339.00"
                android:textColor="@color/btn_red"
                android:textSize="13sp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="bottom|start"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>