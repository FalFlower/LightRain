<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/editUserInfoToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:titleTextAppearance="@style/toolbarTitle"
        app:titleMarginStart="85dp" />
    <LinearLayout
        android:id="@+id/editUserInfoIconLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="20dp">
        <TextView
            style="@style/viewListTitle"
            android:text="@string/user_icon"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">
            <ImageView
                android:id="@+id/editUserInfoIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/ic_arrow_right"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"/>
    <com.lightrain.android.view.EditUserInfoListView
        android:id="@+id/editUserInfoSchool"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
    <com.lightrain.android.view.EditUserInfoListView
        android:id="@+id/editUserInfoSign"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"/>
    <com.lightrain.android.view.EditUserInfoListView
        android:id="@+id/editUserInfoNickname"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
    <com.lightrain.android.view.EditUserInfoListView
        android:id="@+id/editUserInfoGender"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
    <com.lightrain.android.view.EditUserInfoListView
        android:id="@+id/editUserInfoBirthday"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
    <com.lightrain.android.view.EditUserInfoListView
        android:id="@+id/editUserInfoAge"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
    <com.lightrain.android.view.EditUserInfoListView
        android:id="@+id/editUserInfoLocation"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"/>
    <com.lightrain.android.view.EditUserInfoListView
        android:id="@+id/editUserInfoAccount"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
</LinearLayout>