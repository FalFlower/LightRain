<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/classifyRightViewLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp">
    <ImageView
        android:id="@+id/classifyRightViewImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/icon_test_1"/>

    <TextView
        android:id="@+id/classifyRightViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HTML/CSS"
        android:textSize="12sp"
        android:textColor="@color/listGreyRecycleView"
        android:layout_marginTop="10dp"/>

</LinearLayout>