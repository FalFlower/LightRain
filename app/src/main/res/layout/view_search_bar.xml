<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp">
    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:background="@drawable/search_bar_gery"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/ic_search"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/searchBarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/classificationTextColor"
            android:text="@string/search_bar_title"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/searchBarPoint"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@mipmap/ic_point"
            android:layout_gravity="end|top"/>
        <ImageView
            android:id="@+id/searchBarMessage"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@mipmap/ic_message"
            android:layout_marginEnd="10dp"/>
    </FrameLayout>

</LinearLayout>